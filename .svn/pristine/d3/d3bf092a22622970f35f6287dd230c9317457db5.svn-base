.con{width: 1000px;margin: 0 auto;}
.top{
    height: 33px;
    font: 12px/33px "";
    background-image: url(../images/header_login.jpg);
    background-repeat: repeat-x;
}
.top a:hover {
    color: #F60;
}
.wel{
	color: #7b7b7b;
	display: block;
	padding-left: 10px;
	float: left;
	height: 33px;
}
.wel-c {
	display: block;
	float: left;
	height: 33px;
	width: 100px;
}
.top-r span{margin: 0 5px;}

.header{height: 75px;}
.header .logo{
    height: 46px;
	width: 251px;
	padding-top:16px;
	padding-left: 5px;
}
.header-c{
    height: 75px;
	width: 500px;
	text-align: left;
	background-image: url(../images/kx.jpg);
	background-repeat: no-repeat;
	background-position: 10px center;
}
.search{
	margin-top: 28px;
	text-align:right;
	margin-left: 118px;
}
.header-c input{border: none;}
.header-c input.txt{height: 26px;border: 1px solid #12a9e2;width: 210px;}
.header-c input.btn{
    background-image: url(../images/serch_btn.jpg);
    background-repeat: no-repeat;
    height: 28px;
    width: 98px;
    border: 1px solid #12a9e2;
    color: #fff;
}
.header-c a{
    font: 12px/28px "";
    color: rgba(175, 216, 187, 0.842);
    display: inline-block;
    text-align: center;
    padding: 0 8px;
}
.header-c a:hover{color: #be041c;}
.header-r{
    height: 65px;
	width: 220px;
	padding-top:10px;
	padding-left:20px;
}
.header-r div{height: 55px;color: #000;}
.header-r .box1{width: 70px;}
.header-r .box2{width: 85px;}
.header-r .box3{width: 53px;}
.header-r div a{display: block;}
.header-r div a img{display: block;margin: 0 auto;}
.header-r div a span{display: block;text-align: center;}
.nav{
    height: 88px;
    background-image: url(../images/link_bpd.jpg);
    background-repeat: repeat-x;
}
.nav-top {
    height: 42px;
}
.nav-top .all{
    width: 206px;
    height: 40px;
    margin-top: 2px;
    position: relative;
}
.nav-top .all h3{
    height: 32px;
    padding-top: 10px;
    width: 191px;
    position: absolute;
    top: -2px;
    left: 0;
    background-image: url(../images/nav_fl1.jpg);
    font: 700 14px/32px "";
    color:#FFF;
    text-align: center;
}

.nav-top .row{
    width: 192px;
    position: absolute;
    top: 40px;
    left: 0;
    border: 1px solid #1a8fd4;
    border-top: none;
    background-color: #f1f9fc;
    height: 373px;
}
.row>span{
    display: block;
    font: 700 14px/18px "";
    padding: 5px 0 0 45px;
    color:#158FBD;
    height: 18px;
}
.row ul{
    border-top: none;
    width: 188px;
}
.row ul li{
    height: 25px;
    margin-left: 10px;
    margin-right: 15px;
    line-height: 25px;
    padding-left: 5px;
    border-bottom:#e2f5fd 1px solid;
    position: relative;
    cursor: pointer;   
}
.row ul .show{
    display: none;
}
.row ul .active .show{
    position: absolute;
    display: block;
    top: 0;
    left: 160px;
    z-index: 10000;
    background: #fff;
    border: #696967 3px solid;
    width: 550px;
    height: auto;
    cursor: default;
    padding: 10px;
}
.row ul li .show p{
    font: 12px/25px "";
    padding: 5px 20px;
}
.row ul li .show p span{
    display: inline-block;
    width: 85px;
   color: #179ed1;
}
.row ul li .show p a{
    color: #666;
    padding: 0 8px;
}
.row ul li>a{
    font: 12px/25px "";
    color: #3B4053;
    display: block;
    position: relative;
    padding-left: 25px;
    padding-right: 10px;
   border-bottom: 1px solid #959da0;
}
.row ul li>span{
    width: 4px;
    height: 8px;
    line-height: 8px;
    position: absolute;
    top: 10px;
    right: 15px;
    background: url(../images/tiem2.gif) no-repeat -78px -363px;
}
.nav-c{height: 42px;width: 570px;}
.nav-c ul{overflow: hidden;}
.nav-c ul li{float: left;
    font:  700 14px/3 "";
    color: #FFF;
    margin-right: 1px;
    padding-right: 1px;
    background: url(../images/nav_shu.jpg) no-repeat right;
    }
.nav-c ul .active a{
    background: url(../images/linka_big.jpg) 100% 0 no-repeat;
    color: #24a8e9;
}   
.nav-c ul li a{
    display: block;
    color: #FFF;
    font-weight: bold;
    font-size: 14px;
    padding-left: 13px;
    padding-right: 13px;
}
.nav-r{
    height: 36px;
    padding-top: 6px;
    width: 200px;
    padding-top: 7px;
}
.nav-r img{float: left;}
.nav-r span{
    width: 96px;
    display: inline-block;
    height: 28px;
    float: left;
    text-align: center;
    font: 12px/28px "";
    background: url(../images/navto_buy2.jpg) repeat-x;
}
.nav-bot{
    height: 33px;
    padding-left: 212px;
    width: 633px;
}
.nav-bot li{
    display: none;
    height: 36px;
    font: 12px/3 "";
}
.nav-bot .active{
    display: block;
}
.nav-bot a {
    background: url(../images/bg_shu.gif) no-repeat right -87px;
    padding: 0 8px;
    color: #333;
}
.footer .howpay_box{
    float: left;
    width:110px;
}
.footer {
    border: 1px solid #ececec;
    border-top: 4px solid #d61b24;
    padding: 20px 0;
    background-color: #ececec;
    margin-top: 10px;
    width: 998px;
}
.footer_logo {
    width: 290px;
    border-right: 1px solid #ccc;
    margin-top: 20px;
    text-align: center;
}
.footer_gn {
    float: left;
    width: 670px;
    padding-left: 20px;
}
.footer_gn h3{
    font: 14px/25px "";
    height: 25px;
    margin-bottom: 10px;
}
.footer_gn h3 span{
    padding-left: 5px;
}
.howpay_box li {
    line-height: 20px;
    background: url(../images/dot.gif) no-repeat left;
    padding-left: 8px;
}
.howpay_box li a{
    color:#000;
}

.fot{
    text-align: center;
    color: #6666; 
    line-height:22px;
}